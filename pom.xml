		  <!-- which is fine, because the default value does the right thing in our case-->
		  <!-- <webappDirectory>${maven.war.portal.webappDirectory}</webappDirectory>	-->
					<webResources>
						<resource>
							<!-- this is relative to the pom.xml directory -->
							<directory>
								src/main/webapp/WEB-INF
							</directory>
							<!-- enable filtering -->
							<filtering>true</filtering>
							<includes>
								<include>web.xml</include>
							</includes>
							<!-- override the destination directory for this resource -->
							<targetPath>WEB-INF</targetPath>
						</resource>
					</webResources>
				</configuration>
			</plugin>
